<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/basketproduct_pdSumPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/basketproduct_quantityBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/basketproduct_pdDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/basketproduct_quantityEditText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basketproduct_pdDescTextView"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/basketproduct_quantityBtn"
        android:layout_toRightOf="@+id/basketproduct_quantityBtn"
        android:ems="10"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:text="0.00" />

    <TextView
        android:id="@+id/basketproduct_imageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/basketproduct_pdSumPriceTextView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="53dp"
        android:layout_toEndOf="@+id/basketproduct_pdDescTextView"
        android:layout_toRightOf="@+id/basketproduct_pdDescTextView"
        android:text="Image(Added soon)"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/basketproduct_quantityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basketproduct_pdDescTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="90dp"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>